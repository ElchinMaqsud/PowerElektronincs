@model HomeVM
@{
    ViewData["Title"] = "Smartwatch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <section id="category">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12  d-flex justify-content-center">
                    <div class="categories">
                        <ul class="d-flex p-0">
                            <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="SmartPhones">Telefon<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-mobile-alt"></i></a></li>
                            <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Tabs">Planşet<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-tablet-alt"></i></a></li>
                            <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Notebook">Notbuk<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-laptop"></i></a></li>
                            <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Tv">Televizor<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-tv"></i></a></li>
                            <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Smartwatch">Smartwatch<i style="font-size:15px;color:black;margin-left:3px;" class="far fa-clock"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
<!--Slider-Start-->
<section id="slider">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/img/samsung.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/tablets.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/tv.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/smartwatches.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/komputer.png" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="smartwatch-categories" style="background-image: url('https://www.brandfield.com/media/catalog/product/cache/image/9df78eab33525d08d6e5fb8d27136e95/8/7/8718465742329-01.jpg')">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12  d-flex justify-content-center">
                <div class="categories">
                    <ul class="d-flex p-0">
                        @foreach (var marka in Model.Marks)
                        {
                            <li><a style="cursor: pointer;" data-id="@marka.Id" class="ans-marks">@marka.Name</a></li>

                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="smartwatches">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h2>SmartWatchlar</h2>
            </div>
        </div>
        <div class="row" id="announcement_smartwatches">
           <partial name="_AnnouncementSmartwatchPartialView" model="@Model.Smartwatchs"/>
        </div>
    </div>
</section>


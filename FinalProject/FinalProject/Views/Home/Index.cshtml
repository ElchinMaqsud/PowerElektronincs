@model HomeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="category">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12  d-flex justify-content-center">
                <div class="categories">
                    <ul class="d-flex p-0">
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Smartphones">Telefon<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-mobile-alt"></i></a></li>
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Tabs">Planşet<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-tablet-alt"></i></a></li>
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Notebook">Notbuk<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-laptop"></i></a></li>
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Tv">Televizor<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-tv"></i></a></li>
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Smartwatch">Smartwatch<i style="font-size:15px;color:black;margin-left:3px;" class="far fa-clock"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Slider-Start-->
<section id="slider">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/img/samsung.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/tablets.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/tv.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/smartwatches.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/komputer.png" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Slider-End-->
<!--search-Start-->
<section id="search">
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <div class="search-inputs d-flex">
                    <div class="search-category d-flex align-items-center">
                        <label class="search-category-label d-flex align-items-center justify-content-center">Kateqoriya:</label>
                        <select asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))" class="search-category-select ads-product-category-for-create-ads d-flex justify-content-center align-items-center">
                            <option value="">Seçin</option>
                        </select>
                    </div>
                    <div class="search-mark d-flex align-items-center">
                        <label class="search-mark-label d-flex align-items-center justify-content-center">Marka:</label>
                        <select class="search-mark-select ads-product-mark-for-create-ads d-flex justify-content-center align-items-center">
                            <option value="">Seçin</option>
                        </select>
                    </div>
                    <div class="search-model d-flex align-items-center">
                        <label class="search-model-label d-flex align-items-center justify-content-center">Model:</label>
                        <select class="search-model-select ads-product-model-for-create-ads d-flex justify-content-center align-items-center">
                            <option value="">Seçin</option>
                        </select>
                    </div>
                    <div class="search-for-price d-flex align-items-center">
                        <label class="search-price-label  d-flex align-items-center justify-content-center">Qiymət</label>
                        <input class="search-price-input" type="number" placeholder="Daxil edin">
                    </div>
                        <a asp-controller="Ajax" asp-action="SearchAds" id="searchAdvertisement" style="width:120px;height:60px;color:white;background:black;text-decoration:none" class="d-flex justify-content-center align-items-center mt-3 mt-lg-0">Axtar</a>

                </div>
            </div>
        </div>
    </div>

</section>
<!--search-End-->
<!-- Section-Smartphones-Start-->
<section id="smartphones">
    <div class="container">
        <div id="mainAdvertisements" class="row">
            @foreach (var ads in Model.Announcements.Take(6))
            {

                <div class="col-12 col-sm-12 col-md-6 col-lg-4" data-aos="zoom-in" data-aos-duration="3000">
                    <div style="width:100%!important;" class="smartphone">
                        <div class="smartphone-img">
                            <img class="img-fluid" src="~/img/@ads.PhotoUrl" />
                        </div>

                        <div class="smartphone-name d-flex justify-content-between align-items-center">
                            <h5>@ads.Name</h5>
                            <div class="smartphone-activity">

                                <a class="about-icon" asp-controller="Home" asp-action="AdsDetails" asp-route-id="@ads.Id">
                                    Ətraflı
                                </a>
                            </div>
                        </div>
                        <div class="smartphone-infos d-flex align-items-center justify-content-between">
                            <div class="smartphone-info d-flex">
                                <small>@ads.City.Name, @ads.AddDate.Date.ToShortDateString()</small>
                            </div>
                            <div class="smartphone-price">
                                <span>@ads.Price Azn</span>
                            </div>
                        </div>
                    </div>
                </div>
            }

          
        </div>
        <div class="row">
            <div class="col-12 text-center" data-aos="zoom-in" data-aos-duration="3000">
                <button id="loadMoreBtn" class="more-smartphone-btn btn btn-primary">Daha Çox</button>
                <input id="loadMoreCount" type="hidden" value="6" />
                <input id="allAdsCount"  type="hidden" value="@Model.Announcements.Count()"/>
            </div>
        </div>
    </div>
</section>
<!-- Section-Smartphones-End-->


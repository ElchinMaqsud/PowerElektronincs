@model  IEnumerable<News>
@{
    ViewData["Title"] = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="category">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12  d-flex justify-content-center">
                <div class="categories">
                    <ul class="d-flex p-0">
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="SmartPhones">Telefon<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-mobile-alt"></i></a></li>
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Tabs">Planşet<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-tablet-alt"></i></a></li>
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Notebook">Notbuk<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-laptop"></i></a></li>
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Tv">Televizor<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-tv"></i></a></li>
                        <li><a class="d-flex align-items-center" asp-controller="Home" asp-action="Smartwatch">Smartwatch<i style="font-size:15px;color:black;margin-left:3px;" class="far fa-clock"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Slider-Start-->
<section id="slider">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/img/samsung.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/tablets.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/tv.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/smartwatches.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/komputer.png" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="news">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h4>Texnologiya <span>Xəbərləri</span></h4>
            </div>
        </div>
        <div id="NewsDiv" class="row">
           
            @foreach (var news in Model.Take(6))
            {
                <div class="col-12 col-sm-12 col-md-12 col-lg-6" data-aos="zoom-in" data-aos-duration="3000">
                    <div class="one-news d-flex">
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="one-news-image">
                                <img style="object-fit:cover!important" src="~/img/@news.PhotoUrl">
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6">
                            <div class="one-news-title-about">
                                <div class="one-news-title">
                                    <h5>@news.Title</h5>
                                </div>
                                <div class="one-news-about">
                                    <p>@news.Info</p>
                                    <span>@news.AddDate.Date.ToShortDateString()</span>
                                    <button class="one-news-more-btn"><a asp-controller="Home" asp-action="NewsDetails" asp-route-id="@news.Id">Ətraflı</a></button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }


        <div class="row">
            <div class="col-12" data-aos="zoom-in" data-aos-duration="3000">
                <div class="load-more-one-news text-center">
                    <button id="loadMoreNews" class="load-more-btn"><a>Daha Çox</a></button>
                </div>
                <input id="NewsCount" type="hidden" value="6" />
                <input id="allNewsCount" type="hidden" value="@Model.Count()" />
            </div>
        </div>
        </div>
    </div>
</section>



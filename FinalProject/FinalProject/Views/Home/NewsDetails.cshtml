@model News
@{
    ViewData["Title"] = "NewsDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="category">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12  d-flex justify-content-center">
                <div class="categories">
                    <ul class="d-flex p-0">
                        <li><a class="d-flex align-items-center" href="productPhone.html">Telefon<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-mobile-alt"></i></a></li>
                        <li><a class="d-flex align-items-center" href="productTabs.html">Planşet<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-tablet-alt"></i></a></li>
                        <li><a class="d-flex align-items-center" href="productComp.html">Notbuk<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-laptop"></i></a></li>
                        <li><a class="d-flex align-items-center" href="productTv.html">Televizor<i style="font-size:15px;color:black;margin-left:3px;" class="fas fa-tv"></i></a></li>
                        <li><a class="d-flex align-items-center" href="productSmartwatch.html">Smartwatch<i style="font-size:15px;color:black;margin-left:3px;" class="far fa-clock"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Slider-Start-->
<section id="slider">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/img/samsung.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/tablets.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/tv.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/smartwatches.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/komputer.png" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<section style="padding:70px;" id="newsDetails">
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <div class="one-news-details-image">
                    <img class="img-fluid" src="~/img/@Model.PhotoUrl">
                </div>
            </div>
            <div class="col-12">
                <div class="one-news-details-all">
                    <div class="one-news-details-about text-center">
                        <h5>@Model.Title</h5>
                        <p>
                            @Model.Info
                        </p>
                    </div>
                    <div class="one-news-details-back d-flex justify-content-center align-items-center">
                        <button class="one-news-details-backBtn d-flex  justify-content-center align-items-center"><a asp-controller="Home" asp-action="News">Geriyə Dön</a><i class="fas fa-arrow-left"></i></button>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


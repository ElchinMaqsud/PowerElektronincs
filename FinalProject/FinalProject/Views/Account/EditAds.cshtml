@model  Announcement
@{
    ViewData["Title"] = "EditAds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="adsEdit">
    <div class="container">
        <div class="row phone-details-row1">
            <div class="phone-zoom-img d-none">
                <div class="phone-img">
                    <img class="img-fluid" src="~/img/">
                    <div class="image-close">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                <div  class="phone-ads-main-image">
                    <img  src="~/img/@Model.PhotoUrl">
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                <div class="row phone-details-row2">
                    
                        @foreach (var img in Model.AnsImages)
                        {
                            <div class="col-6">
                                <div style="position:relative;" class="phone-ads-image">
                                    <img src="~/img/@img.AdsPhotoUrl">
                                    <a id="deleteAdsImg" data-id="@img.Id" data-ads-id="@Model.Id" class="btn btn-danger" style="text-decoration:none; position:absolute;top:15px;right:14px;"><i style="color:white;font-size:16px;" class="fas fa-trash"></i></a>
                                </div>
                            </div>
                        }
                    
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="ads-all-info-details">
                    <div class="ads-edit-title text-center">
                        <h4>Elan Yenilə</h4>
                    </div>

                    <div class="ads-categories">
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="ads-edit-category d-flex align-items-center">
                                <input type="hidden" asp-for="@Model.PhotoUrl" />
                                <label asp-for="@Model.Model.Mark.CategoryId" class="ads-category-lbl d-flex justify-content-center align-items-center"><span>Kateqoriya:</span></label>
                                <select asp-for="@Model.Model.Mark.CategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))" class="ads-product-category ads-product-category-for-create-ads">
                                    <option value="">Seçin</option>
                                </select>
                                <span asp-validation-for="@Model.Model.Mark.CategoryId"></span>
                                <label asp-for="@Model.Model.MarkId" class="ads-mark-lbl d-flex justify-content-center align-items-center"><span>Marka :</span></label>
                                <select asp-for="@Model.Model.MarkId" asp-items="@(new SelectList(ViewBag.Marks,"Id","Name"))" class="ads-product-mark ads-product-mark-for-create-ads">
                                    <option value="">Seçin</option>
                                </select>
                                <span asp-validation-for="@Model.Model.MarkId"></span>
                                <label asp-for="@Model.ModelId" class="ads-model-lbl d-flex justify-content-center align-items-center"><span>Model :</span></label>
                                <select asp-for="@Model.ModelId" asp-items="@(new SelectList(ViewBag.Models,"Id","Name"))" class="ads-product-model ads-product-model-for-create-ads">
                                    <option value="">Seçin</option>
                                </select>
                                <span asp-validation-for="@Model.ModelId"></span>
                            </div>
                            <div class="ads-images d-flex align-items-center justify-content-center">
                                <div class="ads-edit-main-image d-flex align-items-center">
                                    <label asp-for="@Model.Photo" class="ads-main-image-lbl d-flex justify-content-center align-items-center"><span>Əsas şəkili seç:</span></label>
                                    <input asp-for="@Model.Photo" class="ads-main-image-input">
                                    <div class="ads-fake-input-div d-flex justify-content-center align-items-center">
                                        <i class="fas fa-upload"></i>
                                        <span>Yüklə</span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.Photo"></span>
                                <div class="ads-edit-other-images d-flex align-items-center">
                                    <label asp-for="@Model.AnsAllImages" class="ads-other-images-lbl d-flex justify-content-center align-items-center"><span>Şəkilləri seç:</span></label>
                                    <input asp-for="@Model.AnsAllImages" class="ads-other-images-input">
                                    <div class="ads-fakt-input-images-div d-flex justify-content-center align-items-center">
                                        <i class="fas fa-upload"></i>
                                        <span>Yüklə</span>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.AnsAllImages"></span>
                            </div>
                            <div class="ads-cities-contact-number justify-content-center d-flex align-items-center ">
                                <div class="ads-cities d-flex align-items-center">
                                    <label asp-for="@Model.CityId" class="ads-cities-lbl d-flex justify-content-center align-items-center"><span>Şəhəri Seç:</span></label>
                                    <select asp-for="@Model.CityId" asp-items="@(new SelectList(ViewBag.Cities,"Id","Name"))" class="ads-cities-select"></select>
                                </div>
                                <span asp-validation-for="@Model.CityId"></span>
                                <div class="ads-contact-name d-flex align-items-center">
                                    <label asp-for="@Model.Name" class="ads-contact-name-lbl d-flex justify-content-center align-items-center"><span>Başlıq:</span></label>
                                    <input asp-for="@Model.Name" class="ads-contact-name-input">
                                </div>
                                <span asp-validation-for="@Model.Name"></span>
                            </div>

                            <div class="ads-edit-details d-flex justify-content-center align-items-center">
                                <label asp-for="@Model.Info" class="ads-edit-details-lbl d-flex justify-content-center align-items-center"><span>Haqqında:</span></label>
                                <textarea asp-for="@Model.Info" class="ads-edit-details-info" cols="60" rows="3"></textarea>
                            </div>
                            <span asp-validation-for="@Model.Info"></span>
                            <div class="ads-edit-price d-flex align-items-center justify-content-center">
                                <label asp-for="@Model.Price" class="ads-edit-price-lbl d-flex justify-content-center align-items-center"><span>Qiymət:</span></label>
                                <input asp-for="@Model.Price" class="ads-edit-price-input">
                            </div>
                            <span asp-validation-for="@Model.Price"></span>
                            <div class="ads-edit-process d-flex justify-content-center align-items-center">
                                <input class="ads-edit-btn" type="submit" value="Yenilə">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

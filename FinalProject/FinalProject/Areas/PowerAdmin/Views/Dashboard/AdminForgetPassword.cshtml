@model ForgetPasswordVM
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Areas/PowerAdmin/Views/Shared/_AdminLayout.cshtml";
}

    <section id="passwordEmailVerify">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h5>Giriş Bərpası</h5>
                </div>
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div style="width:250px;height:250px;background:gold;justify-content:center;align-items:center;" class="userEmailVerify d-flex">
                            <label class="d-flex justify-content-center align-items-center" asp-for="Email">Email</label>
                            <input asp-for="Email" type="text">
                        </div>
                        <span asp-validation-for="Email"></span>
                        <div class="confirmVerify d-flex align-items-center justify-content-center">
                            <input class="btn btn-success" type="submit" value="Göndər">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>




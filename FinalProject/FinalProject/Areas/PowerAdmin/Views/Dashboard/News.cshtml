@model  IEnumerable<News>
@{
    ViewData["Title"] = "News";
    Layout = "~/Areas/PowerAdmin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 mb-5">
    <a class="btn btn-success btn-block d-flex justify-content-center align-items-center"  asp-area="PowerAdmin" asp-controller="Dashboard" asp-action="CreateNews"> Xəbər Yarat <i style="color:white;font-size:20px;margin-left:15px;" class="fas fa-plus"></i></a>
</div>

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Başlıq</th>
                <th scope="col">Şəkil</th>
                <th scope="col">Haqqında</th>
                <th scope="col">Yerləşdirmə Tarixi</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td>@news.Title</td>
                    <td><img style="width:150px;height:150px;object-fit:cover;" src="~/img/@news.PhotoUrl" /></td>
                    <td>@news.Info</td>
                    <td>@news.AddDate.Date.ToShortDateString()</td>
                    <td><a class="btn btn-success" asp-area="PowerAdmin" asp-controller="Dashboard" asp-action="NewsDetails" asp-route-id="@news.Id"><i style="font-size:20px;color:white" class="fas fa-info"></i></a></td>
                </tr>
            }


        </tbody>
    </table>
